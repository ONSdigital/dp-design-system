{
  "name": "dp-design-system",
  "version": "1.0.0",
  "description": "Digital Publishing (ONS) Design System",
  "main": "",
  "scripts": {
    "audit": "auditjs ossi --quiet",
    "compile:css": "node-sass src/scss -o dist/assets/css",
    "build:css": "node-sass --style=compressed src/scss -o dist/assets/css",
    "build:js": "esbuild src/js/main.js --bundle --minify --outfile=dist/assets/js/main.js",
    "build": "run-s clean build:*",
    "watch:css": "npm run compile:css && node-sass src/scss -wo dist/assets/css",
    "watch:js": "esbuild src/js/main.js --sourcemap --bundle --watch --outfile=dist/assets/js/main.js",
    "server": "ws -p ${PORT:-9001}",
    "dev": "run-p clean watch:* server",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ONSdigital/dp-design-system.git"
  },
  "author": "Digital Publishing (ONS)",
  "license": "Open Government License v3.0",
  "bugs": {
    "url": "https://github.com/ONSdigital/dp-design-system/issues"
  },
  "homepage": "https://github.com/ONSdigital/dp-design-system#readme",
  "dependencies": {
    "@ons/design-system": "^41.0.2",
    "local-web-server": "^4.2.1",
    "node-sass": "^6.0.1"
  },
  "devDependencies": {
    "auditjs": "^4.0.24",
    "autoprefixer": "^10.2.4",
    "esbuild": "^0.13.4",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "sass-lint": "^1.13.1"
  }
}
